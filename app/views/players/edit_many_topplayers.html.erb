<%= bootstrap_form_tag url: update_many_topplayers_players_path do |f| %>

	<div class='row'>
		<div class='col-2'>
			name
		</div>

		<div class='col-2 text-center'>
			topplayer
		</div>
	</div>		


	<%Player.unscoped.each do |player|%>
	<div class='row'>
		<div class='col-2'>
			<%=player.name%>
		</div>

		<div class='col-2 text-center'>
			<%= check_box_tag "player_ids[]", player.id , player.best%> 
		</div>
	</div>		  			  		


	<%end%>

	<div class='row'>
		<div class='col-2'>
			&nbsp;
		</div>

		<div class='col-2 text-center'>
			<%#= f.submit , 'pas aan' ,class: 'btn btn-primary'%>
			<%= f.submit 'kies topplayer', :class => 'btn btn-primary' %>
			
		</div>
	</div>

  
<% end %>
