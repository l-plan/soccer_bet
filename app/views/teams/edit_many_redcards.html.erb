<%= bootstrap_form_tag url: update_many_redcards_teams_path do |f| %>

	<div class='row'>
		<div class='col-2'>
			name
		</div>

		<div class='col-2 text-center'>
			redcard
		</div>
	</div>		


	<%Team.unscoped.each do |team|%>
	<div class='row'>
		<div class='col-2'>
			<%=team.name%>
		</div>

		<div class='col-2 text-center'>
			<%= check_box_tag "team_ids[]", team.id , team.red%> 
		</div>
	</div>		  			  		


	<%end%>

	<div class='row'>
		<div class='col-2'>
			&nbsp;
		</div>

		<div class='col-2 text-center'>
			<%#= f.submit , 'pas aan' ,class: 'btn btn-primary'%>
			<%= f.submit 'kies redcard', :class => 'btn btn-primary' %>
			
		</div>
	</div>

  
<% end %>
