<p id="notice"><%= notice %></p>

<h1>Bet Teams</h1>

<table>
  <thead>
    <tr>
      <th>Participant</th>
      <th>Stage</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bet_teams.each do |bet_team| %>
      <tr>
        <td><%= bet_team.participant_id %></td>
        <td><%= bet_team.stage %></td>
        <td><%= bet_team.team_id %></td>
        <td><%= link_to 'Show', bet_team %></td>
        <td><%= link_to 'Edit', edit_bet_team_path(bet_team) %></td>
        <td><%= link_to 'Destroy', bet_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

